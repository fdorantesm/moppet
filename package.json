{
  "name": "moppet",
  "version": "1.0.3",
  "description": "A CLI tool to remove all deep node_modules from a directory",
  "main": "dist/index.js",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "bin": {
    "mop": "./dist/index.js"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc",
    "premake": "yarn build",
    "postinstall": "node dist/lib/commands/postinstall.js"
  },
  "keywords": [
    "node_modules",
    "purge",
    "clean",
    "delete",
    "remove",
    "garbage",
    "modules",
    "weight",
    "lightweight",
    "disk",
    "space"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "byte-size": "^8.1.0",
    "chalk": "^4.1.2",
    "commander": "^10.0.0",
    "fast-folder-size": "^1.7.1",
    "glob": "^7.1.7",
    "node-emoji": "^1.11.0",
    "rimraf": "^4.1.2"
  },
  "devDependencies": {
    "@types/node": "^18.13.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5"
  },
  "bugs": {
    "url": "https://github.com/fdorantesm/moppet/issues"
  }
}